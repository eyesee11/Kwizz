# =============================================================================
# QUIZ PLATFORM - ENVIRONMENT VARIABLES EXAMPLE
# =============================================================================
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_URL=jdbc:mysql://localhost:3306/quiz_db?createDatabaseIfNotExist=true&useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC
DB_USERNAME=root
DB_PASSWORD=your_mysql_password_here

# =============================================================================
# JWT SECURITY CONFIGURATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-at-least-256-bits-long-for-production
JWT_TTL_SECONDS=86400
JWT_REFRESH_TTL_SECONDS=604800

# =============================================================================
# AI SERVICE CONFIGURATION
# =============================================================================
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
SERVER_PORT=8080
DDL_AUTO=update
SHOW_SQL=false
LOG_LEVEL=INFO
SECURITY_LOG_LEVEL=WARN

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174
